{
    "name": "llend-vscode",
    "displayName": "llend",
    "description": "Use llend in VSCode",
    "version": "0.0.1",
    "publisher": "qngapparat <jakob.wallnoefer@outlook.com>",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "title": "Enable CodeLens",
                "command": "llend-vscode.enablellend",
                "category": "llend"
            },
            {
                "title": "Disable Codelens",
                "command": "llend-vscode.disablellend",
                "category": "llend"
            }
        ],
        "configuration": {
            "properties": {
                "llend-vscode.enablellend": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "llend": "latest"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.26.0",
        "tslint": "5.10.0",
        "typescript": "3.8.3"
    }
}
